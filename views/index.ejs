<%- include('partials/header') %>

<div class="container">

    <div class="formStyle">
        <form action="/recipes" method="post">
            <div class="form-group">
                <input class="form-control" type="text" name="recipe[title]" placeholder="Recipe Name" required>
            </div>
            <div class="form-group">
                <textarea class="form-control" name="recipe[description]" placeholder="Recipe description" cols="30" rows="10" required></textarea>
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="recipe[image]" placeholder="Picture of recipe">
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
    
</div>


<%- include('partials/footer') %>